<% layout('layout') %>
<div class="row register-form">
        <div class="col-md-8 col-md-offset-2">
            <form action = "/admin/add-category" method = "POST" class="form-horizontal custom-form" enctype="multipart/form-data">
                <h1>Add Category</h1>
                <% include ../partials/message %>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="name">Name </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "name" class="form-control" type="text" required >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="name">Image </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "image" class="form-control" type="file"  >
                    </div>
                </div>
                <button class="btn btn-default submit-button" type="submit">Add</button>
            </form>
        </div>
    </div>
<% layout('layout') %>
<section id="profile">
    <div class="panel panel-default">
        <div class="panel-body">
            <% include ../partials/message %>
            <div class="media">
                <div class="media-left">
                    <a><img src="<%= user.profile.picture %>" class="img-circle" style="height: 50px; width: 50px;"></a>
                </div>
                <div class="media-body">
                    <ul class="list-unstyled fa-ul">
                        <li><i class="fa fa-user fa-li"></i><a href="#"><%= user.profile.name %></a></li>
                        <li><i class="fa fa-envelope fa-li"></i><a href="#"><%= user.email %> </a></li>
                        <li><i class="fa fa-phone fa-li"></i><p><%= user.phone %></p></li>
                        <li><i class="fa fa-address-card fa-li"></i><p><%= user.address %></p></li>
                        <br/>
                        <a href= "/users/edit-profile/<%= user._id %>" class = "btn btn-primary">Edit Profile</a>
                    </ul>
                </div>
            </div>
            <hr>
            <div><small><strong>Propensity to Give </strong><i class="fa fa-info-circle text-primary"></i></small>
                <div class="progress progress-high">
                    <div class="progress-bar progress-bar-danger" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"><span class="sr-only">90%</span></div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="fa-stack"><i class="fa fa-history fa-2x"></i></span>Lịch sử giao dịch</h3></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8 text-center">
                            <h4>Chi Tiết </h4></div>
                        <div class="col-md-4">
                            <h4>Tổng Tiền </h4></div>
                    </div>
                    
                    
                    <% for(var i = 0; i < user.history.length; i++) { %>
                    <div class="row history-item-box">
                        <div class="col-md-8">
                            <div class="media">
                                <div class="media">
                                	<div class="media-body">
                                	    <% for(var j = 0; j < user.history[i].items.length; j++) { %>
                                	        <% if (user.history[i].items[j].item) { %> 
										<div class="row item-box">
											<img class = "col-lg-4" src="<%= user.history[i].items[j].item.image %>" alt="">
											<h3 class = "col-lg-8"><%= user.history[i].items[j].item.name %> <span class = "badge"><%= user.history[i].items[j].quantity %></span></h3>
										
										</div>
										    <% } %>
										<% } %>
									
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <p><span class="h3"> <%= Math.floor(user.history[i].paid) %> VND <span class="label label-success">Đã thanh toán</span> </span>
                                <br>
							</p>
                            
                        </div>
                    </div>
                    	<br/>
											<hr/>
                    <% } %>
                        <div class="col-md-12">
                            <nav>
                                <ul class="pagination">
                                    <li><a aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                    <li class="active"><a>1</a></li>
                                    <li><a>2</a></li>
                                    <li><a>3</a></li>
                                    <li><a>4</a></li>
                                    <li><a>5</a></li>
                                    <li><a aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            
        <hr>
        <div class="row">
            <div class="col-md-4 text-center"><span class="fa-stack fa-lg"><i class="fa fa-circle fa-stack-2x active-color"></i><i class="fa fa-file-text-o fa-stack-1x fa-inverse"></i></span>
                <p><a href="#">Contact Templates</a></p>
            </div>
            <div class="col-md-4 text-center"><span class="fa-stack fa-lg"><i class="fa fa-circle fa-stack-2x active-color"></i><i class="fa fa-envelope-o fa-stack-1x fa-inverse"></i></span>
                <p><a href="#">Invite Them</a></p>
            </div>
            <div class="col-md-4 text-center"><span class="fa-stack fa-lg"><i class="fa fa-circle fa-stack-2x active-color"></i><i class="fa fa-comments fa-stack-1x fa-inverse"></i></span>
                <p><a href="#">Get Expert Advice</a></p>
            </div>
        </div>
    </div>
    </div>
</section>
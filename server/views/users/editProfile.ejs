<% layout('layout') %>
<div class="row register-form">
        <div class="col-md-8 col-md-offset-2">
            <form action = "/users/edit-profile/<%= user._id %>" method = "POST" class="form-horizontal custom-form" enctype="multipart/form-data">
                <h1>Edit Profile</h1>
                <% include ../partials/message %>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="name">Name </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "name" class="form-control" type="text" required value = "<%= user.profile.name %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="repeat-pawssword-input-field">Address </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "address" class="form-control" type="text" value = "<%= user.address %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="repeat-pawssword-input-field">Phone </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "phone" class="form-control" type="text" value = "<%= user.phone %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="repeat-pawssword-input-field">picture </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "picture" class="form-control" type="file" value = "<%= user.profile.picture %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="repeat-pawssword-input-field">Birthday </label>
                    </div>
                    <div class="col-sm-6 input-column">
                        <input name = "Birthday" class="form-control" type="Date" value = "<%= new Date(user.birthday).toUTCString() %>">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 label-column">
                        <label class="control-label" for="repeat-pawssword-input-field">Gender </label>
                    </div>
                    <div class="col-sm-3 input-column text-center ">
                        <label>Man <input name = "Gender" class = "radio-inline" type="radio" value = "man"></label>
                    </div>
                    <div class="col-sm-3 input-column text-center">
                        <label>Woman <input name = "Gender" class = "radio-inline" type="radio" value = "woman"></label>
                    </div>
                </div>
                
                <button class="btn btn-default submit-button" type="submit">Submit Form</button>
            </form>
        </div>
    </div>